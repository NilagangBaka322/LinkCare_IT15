@model LinkCare_IT15.Models.DoctorModel.DoctorPatientsModel

@{
    ViewBag.Title = "Patients · Link Care";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}

<div class="container-fluid">
    <div class="mb-3">
        <h3 class="fw-bold">Patients</h3>
        <p class="text-muted">Manage and view your registered patients</p>
    </div>

    <div class="lc-card p-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0">
                <i class="bi bi-people me-2"></i> My Patients
            </h5>
            <button class="btn btn-primary btn-sm">
                + Add Patient
            </button>
        </div>

        <p class="text-muted">@Model.TotalPatients total patients</p>

        <div class="table-responsive">
            <table class="table align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Gender</th>
                        <th>Contact</th>
                        <th>Status</th>
                        <th>Last Visit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.Patients)
                    {
                        var badgeClass = p.Status.ToLower() == "active"
                        ? "bg-success-subtle text-success"
                        : "bg-danger-subtle text-danger";

                        <tr>
                            <td class="fw-semibold">@p.PatientName</td>
                            <td>@p.Age</td>
                            <td>@p.Gender</td>
                            <td>@p.Contact</td>
                            <td>
                                <span class="badge rounded-pill @badgeClass">
                                    @p.Status
                                </span>
                            </td>
                            <td>@p.LastVisit.ToString("MMM dd, yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
