@model LinkCare_IT15.Models.DoctorModel.DoctorConsultationPageViewModel
@using System.Security.Claims

@{
    ViewBag.Title = "Consultations · Link Care";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h3 class="fw-bold">Consultations</h3>
            <p class="text-muted">Manage patient consultations and medical history</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary">
                <i class="bi bi-printer me-1"></i> Print Consultations
            </a>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newConsultationModal">
                <i class="bi bi-plus-circle me-1"></i> New Consultation
            </button>
        </div>
    </div>

    <!-- Card -->
    <div class="lc-card p-4">
        <h5 class="mb-3">Consultation Records</h5>
        <p class="text-muted">Your recorded consultations with patients</p>

        <!-- Records List -->
        <div class="list-group">
            @if (Model.Consultations != null && Model.Consultations.Any())
            {
                foreach (var consult in Model.Consultations)
                {
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <div class="fw-bold">@consult.PatientName</div>
                            <div class="small text-muted">
                                Dr. @consult.DoctorName • @consult.Date.ToString("yyyy-MM-dd")
                                • @consult.Diagnosis
                            </div>
                            <div class="small">
                                <strong>BP:</strong> @consult.BloodPressure |
                                <strong>HR:</strong> @consult.HeartRate |
                                <strong>Temp:</strong> @consult.Temperature |
                                <strong>Weight:</strong> @consult.Weight
                            </div>
                        </div>
                        <i class="bi bi-chevron-right text-muted"></i>
                    </a>
                }
            }
            else
            {
                <div class="text-center text-muted p-4">
                    No consultations found.
                </div>
            }
        </div>
    </div>
</div>

<!-- New Consultation Modal -->
<div class="modal fade" id="newConsultationModal" tabindex="-1" aria-labelledby="newConsultationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold">New Medical Consultation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form asp-action="AddConsultation" method="post">
                <!-- Hidden fields -->
                <input type="hidden" asp-for="NewConsultation.DoctorId" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />
                <input type="hidden" asp-for="NewConsultation.PatientId" id="PatientId" value="0" />

                <!-- Patient info -->
                <div class="mb-3">
                    <label class="form-label">Patient Name *</label>
                    <input type="text" class="form-control" asp-for="NewConsultation.PatientName" placeholder="Patient Name" required />
                </div>

                <!-- Consultation details -->
                <div class="mb-3">
                    <label class="form-label">Chief Complaint *</label>
                    <textarea class="form-control" asp-for="NewConsultation.ChiefComplaint" placeholder="Chief Complaint" required></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Diagnosis *</label>
                    <textarea class="form-control" asp-for="NewConsultation.Diagnosis" placeholder="Diagnosis" required></textarea>
                </div>

                <!-- Prescriptions -->
                <div id="prescriptionsContainer" class="mb-3">
                    <input type="text" class="form-control mb-2" name="NewConsultation.Prescriptions" placeholder="Prescription 1" />
                </div>
                <button type="button" id="addPrescriptionBtn" class="btn btn-sm btn-outline-secondary mb-3">Add Prescription</button>

                <!-- Vitals -->
                <div class="mb-3">
                    <label class="form-label">Blood Pressure</label>
                    <input type="text" class="form-control" asp-for="NewConsultation.BloodPressure" placeholder="Blood Pressure" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Heart Rate</label>
                    <input type="text" class="form-control" asp-for="NewConsultation.HeartRate" placeholder="Heart Rate" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Temperature</label>
                    <input type="text" class="form-control" asp-for="NewConsultation.Temperature" placeholder="Temperature" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Weight</label>
                    <input type="text" class="form-control" asp-for="NewConsultation.Weight" placeholder="Weight" />
                </div>

                <button type="submit" class="btn btn-primary">Save Consultation</button>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Dynamic prescriptions
            const addPrescriptionBtn = document.getElementById("addPrescriptionBtn");
            const prescriptionsContainer = document.getElementById("prescriptionsContainer");

            addPrescriptionBtn?.addEventListener("click", function () {
                const count = prescriptionsContainer.children.length + 1;
                const input = document.createElement("input");
                input.type = "text";
                input.name = "NewConsultation.Prescriptions";
                input.className = "form-control mb-2";
                input.placeholder = "Prescription " + count;
                prescriptionsContainer.appendChild(input);
            });
        });
    </script>
}
