@model IEnumerable<LinkCare_IT15.Models.PatientModel.RecordViewModel>


@{
    ViewBag.Title = "My Medical Records · Link Care";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

<div class="container-fluid">
    <div class="mb-3">
        <h3 class="fw-bold">My Medical Records</h3>
        <p class="text-muted">View your consultation history and medical notes</p>
    </div>

    <div class="lc-card p-4">
        <h5 class="mb-3">Medical History</h5>
        <p class="text-muted">Your past medical consultations and health records</p>

        <!-- Search + Filter -->
        <div class="d-flex flex-wrap mb-3">
            <div class="me-auto mb-2">
                <input type="text" class="form-control" placeholder="Search by diagnosis or doctor name..." />
            </div>
            <div>
                <select class="form-select">
                    <option>All Records</option>
                    <option>With Prescriptions</option>
                    <option>Without Prescriptions</option>
                </select>
            </div>
        </div>

        <!-- Table -->
        <div class="table-responsive">
            <table class="table align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Patient</th>
                        <th>Doctor</th>
                        <th>Date</th>
                        <th>Chief Complaint</th>
                        <th>Diagnosis</th>
                        <th>Prescriptions</th>
                        <th>Vitals</th>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var record in Model)
                        {
                            <tr>
                                <td>@record.PatientName</td>
                                <td>@record.DoctorName</td>
                                <td>@record.ConsultationDate.ToString("yyyy-MM-dd")</td>
                                <td>@record.ChiefComplaint</td>
                                <td>@record.Diagnosis</td>
                                <td>
                                    @if (record.Prescriptions != null && record.Prescriptions.Any())
                                    {
                                        foreach (var med in record.Prescriptions)
                                        {
                                            <span class="badge bg-light text-dark me-1">@med</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">None</span>
                                    }
                                </td>
                                <td>
                                    <div><strong>BP:</strong> @record.BloodPressure</div>
                                    <div><strong>HR:</strong> @record.HeartRate</div>
                                    <div><strong>T:</strong> @record.Temperature °C</div>
                                    <div><strong>W:</strong> @record.Weight kg</div>
                                </td>
                                <td>@record.Notes</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted">
                                No medical records found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
