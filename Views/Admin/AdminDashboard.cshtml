@model LinkCare_IT15.Models.AdminModel.AdminDashboardModel

@{
    ViewBag.Title = "Admin Dashboard · Link Care";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["ActivePage"] = "Dashboard";
}

<div class="container-fluid">
    <div class="mb-2">
        <h4 class="fw-bold">Dashboard</h4>
        <div class="text-muted small">Clinic management overview</div>
    </div>

    <!-- Metrics Row -->
    <div class="row g-3">
        <div class="col-12 col-lg-3">
            <div class="lc-card p-3 h-100">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div class="lc-card-title">Today's Appointments</div>
                    <i class="bi bi-calendar-check"></i>
                </div>
                <div class="fs-4 fw-bold">@Model.TotalAppointments</div>
                <div class="small-muted">@Model.ScheduledAppointments scheduled</div>
            </div>
        </div>
        <div class="col-12 col-lg-3">
            <div class="lc-card p-3 h-100">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div class="lc-card-title">Total Patients</div>
                    <i class="bi bi-people"></i>
                </div>
                <div class="fs-4 fw-bold">@Model.TotalPatients</div>
                <div class="small-muted">Active patients</div>
            </div>
        </div>
        <div class="col-12 col-lg-3">
            <div class="lc-card p-3 h-100">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div class="lc-card-title">Monthly Revenue</div>
                    <i class="bi bi-graph-up"></i>
                </div>
                <div class="fs-4 fw-bold">₱@String.Format("{0:n0}", Model.MonthlyRevenue)</div>
                <div class="small-muted">+@Model.RevenueGrowth% from last month</div>
            </div>
        </div>
        <div class="col-12 col-lg-3">
            <div class="lc-card p-3 h-100">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div class="lc-card-title">Pending Bills</div>
                    <i class="bi bi-receipt-cutoff"></i>
                </div>
                <div class="fs-4 fw-bold">@Model.PendingBills</div>
                <div class="small-muted">₱@String.Format("{0:n0}", Model.PendingAmount) outstanding</div>
            </div>
        </div>
    </div>

    <!-- Schedule and Activity -->
    <div class="row g-3 mt-1">
        <div class="col-12 col-lg-8">
            <div class="lc-card p-3">
                <div class="lc-card-title mb-2"><i class="bi bi-clock-history me-2"></i>Today's Schedule</div>
                <ul class="list-plain">
                    @foreach (var appt in Model.TodayAppointments)
                    {
                        <li>
                            <div>
                                <div class="fw-semibold">@appt.PatientName</div>
                                <div class="small-muted"><i class="bi bi-calendar2 me-1"></i>@appt.Start.ToString("h:mm tt - ") @appt.Title</div>
                            </div>
                            <span class="badge rounded-pill badge-soft">@appt.Status</span>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <div class="col-12 col-lg-4">
            <div class="lc-card p-3 h-100">
                <div class="lc-card-title mb-2"><i class="bi bi-activity me-2"></i>Recent Activity</div>
                <ul class="timeline ps-0">
                    @foreach (var a in Model.RecentActivity)
                    {
                        <li>
                            <span class="dot"></span>
                            <div>
                                <div class="fw-semibold">@a.Label</div>
                                <div class="small-muted">@a.User</div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
