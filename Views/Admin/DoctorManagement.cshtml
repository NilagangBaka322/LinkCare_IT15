@model LinkCare_IT15.Models.AdminModel.AdminDoctorsModel
@{
    ViewData["Title"] = "Doctor Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <h2 class="fw-bold mb-1">Doctor Management</h2>
    <p class="text-muted">Register new doctors and manage their account status</p>

    <div class="lc-card p-3 mb-3">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="fw-semibold"><i class="bi bi-person-badge me-2"></i>Registered Doctors</div>
            <div>
                <a asp-action="RegisterDoctor" asp-controller="Admin" class="btn btn-primary btn-sm">
                    <i class="bi bi-person-plus"></i> Register Doctor
                </a>
            </div>
        </div>

        <form method="get" class="mb-3" asp-action="DoctorManagement" asp-controller="Admin">
            <div class="input-group">
                <input name="search" value="@Model.SearchTerm" type="text" class="form-control" placeholder="Search by name, email, specialty, or license number..." />
                <button class="btn btn-outline-secondary" type="submit"><i class="bi bi-search"></i></button>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Doctor</th>
                        <th>Contact</th>
                        <th>Specialty</th>
                        <th>License</th>
                        <th>Status</th>
                        <th>Registered</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Doctors != null && Model.Doctors.Any())
                    {
                        foreach (var d in Model.Doctors)
                        {
                            <tr>
                                <td>
                                    <div class="fw-semibold">@d.FullName</div>
                                    <div class="small text-muted"><i class="bi bi-envelope me-1"></i>@d.Email</div>
                                </td>
                                <td>
                                    <div>@d.Phone</div>
                                    <div class="small text-muted">Last login: @(d.LastLogin?.ToString("yyyy-MM-dd") ?? "—")</div>
                                </td>
                                <td>
                                    <span class="badge rounded-pill badge-soft">@d.Specialty</span>
                                </td>
                                <td>@d.LicenseNumber</td>
                                <td>
                                    @if (d.IsActive)
                                    {
                                        <span class="badge bg-primary">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>@d.Registered.ToString("yyyy-MM-dd")</td>
                                <td class="text-end">
                                    <a asp-action="DoctorDetails" asp-controller="Admin" asp-route-id="@d.Id" class="btn btn-outline-secondary btn-sm me-1">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    <form asp-action="ToggleDoctorStatus" asp-controller="Admin" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@d.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-toggle-on"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted">No doctors found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
