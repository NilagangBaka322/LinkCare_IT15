@* Views/Shared/_DoctorLayout.cshtml *@
@{
    Layout = null;
    var title = ViewBag.Title as string ?? "Link Care · Smart Clinic System";
    var activePage = ViewData["ActivePage"] as string ?? "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>

    <!-- Bootstrap 5 + Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        :root {
            --lc-primary: #3b82f6;
            --lc-primary-600: #2563eb;
            --lc-bg: #f8fafc;
            --lc-card: #ffffff;
            --lc-border: #e5e7eb;
            --lc-text: #0f172a;
        }

        html, body {
            height: 100%;
        }

        body {
            background: var(--lc-bg);
            color: var(--lc-text);
        }

        /* Layout */
        .lc-shell {
            display: grid;
            grid-template-columns: 260px 1fr;
            min-height: 100vh;
            transition: grid-template-columns 0.3s;
        }

            .lc-shell.collapsed {
                grid-template-columns: 70px 1fr;
            }

        .lc-sidebar {
            background: linear-gradient(180deg, var(--lc-primary) 0%, var(--lc-primary-600) 100%);
            color: #fff;
            padding: 1rem 0.75rem;
            transition: width 0.3s, padding 0.3s;
            overflow: hidden;
        }

        .lc-shell.collapsed .lc-sidebar {
            width: 70px;
            padding: 1rem 0.25rem;
        }

        /* Brand */
        .lc-brand {
            display: flex;
            align-items: center;
            gap: .5rem;
            padding: .5rem .75rem;
            margin-bottom: .5rem;
            white-space: nowrap;
        }

            .lc-brand .dot {
                width: 10px;
                height: 10px;
                border-radius: 999px;
                background: #a7f3d0;
            }

        .lc-shell.collapsed .lc-brand div {
            display: none;
        }

        /* Nav links */
        .lc-nav a {
            display: flex;
            align-items: center;
            gap: .5rem;
            color: #e5e7eb;
            text-decoration: none;
            padding: .6rem .75rem;
            border-radius: .75rem;
            font-weight: 500;
            white-space: nowrap;
        }

            .lc-nav a:hover, .lc-nav a.active {
                background: rgba(255,255,255,.15);
                color: #fff;
            }

        .lc-shell.collapsed .lc-nav a span {
            display: none; /* hide labels when collapsed */
        }

        /* Content */
        .lc-content {
            padding: 1rem 1.5rem;
        }

        /* Topbar */
        .lc-topbar {
            display: flex;
            justify-content: flex-end;
            align-items: center;
            gap: .5rem;
            margin-bottom: 1rem;
        }

        /* Cards */
        .lc-card {
            background: var(--lc-card);
            border: 1px solid var(--lc-border);
            border-radius: 1rem;
            box-shadow: 0 4px 20px rgba(2,6,23,.04);
        }
    </style>
    @RenderSection("Styles", required: false)
</head>


<body>
    <div class="lc-shell">
        <!-- Sidebar -->
        <aside class="lc-sidebar">
            <div class="lc-brand">
                <span class="dot"></span>
                <div>
                    <div class="fw-bold">Link Care</div>
                    <div class="small" style="opacity:.85">Smart Clinic System</div>
                </div>
            </div>

            <div class="px-2 text-uppercase small" style="opacity:.85">Doctor</div>
            <nav class="lc-nav mt-2">
                <a class="@(activePage == "Dashboard" ? "active" : "")" href="/Doctor/DoctorDashboard">
                    <i class="bi bi-speedometer2"></i> <span>Dashboard</span>
                </a>
                <a class="@(activePage == "Appointments" ? "active" : "")" href="/Doctor/DoctorAppointments">
                    <i class="bi bi-calendar-event"></i> <span>Appointments</span>
                </a>
                <a class="@(activePage == "Patients" ? "active" : "")" href="/Doctor/DoctorPatients">
                    <i class="bi bi-people"></i> <span>Patients</span>
                </a>
                <a class="@(activePage == "Consultations" ? "active" : "")" href="/Doctor/DoctorConsultation">
                    <i class="bi bi-chat-dots"></i> <span>Consultations</span>
                </a>
                <a class="@(activePage == "MedicalRecords" ? "active" : "")" href="/Doctor/DoctorMedicalRecords">
                    <i class="bi bi-journal-medical"></i> <span>Medical Records</span>
                </a>
            </nav>
        </aside>

        <!-- Main content -->
        <main class="lc-content">
            <div class="lc-topbar">
                <button id="toggleSidebar" class="btn btn-outline-secondary me-auto">
                    <i class="bi bi-list"></i>
                </button>
                <div class="dropdown">
                    <button class="btn lc-card py-2 px-3 dropdown-toggle" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle me-2"></i> Doctor User
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end shadow">
                        <li><a href="#" class="dropdown-item"><i class="bi bi-gear me-2"></i>Settings</a></li>
                        <li>
                            <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="dropdown-item p-0">
                                <button type="submit" class="btn btn-link text-dark w-100 text-start">
                                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>

            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const shell = document.querySelector(".lc-shell");
        const toggleBtn = document.getElementById("toggleSidebar");

        // Load saved state
        if (localStorage.getItem("doctorSidebarState") === "collapsed") {
            shell.classList.add("collapsed");
        }

        toggleBtn.addEventListener("click", () => {
            shell.classList.toggle("collapsed");
            // Save state
            if (shell.classList.contains("collapsed")) {
                localStorage.setItem("doctorSidebarState", "collapsed");
            } else {
                localStorage.setItem("doctorSidebarState", "expanded");
            }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
